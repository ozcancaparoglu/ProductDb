@model WarehouseTypeModel

@inject CustomLocalizer localizer

@using (Html.BeginForm("editwarehousetype", "Warehouse", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.CreatedDate)
    @Html.HiddenFor(model => model.State)
    <!-- Content Header (Page header) -->
    <section class="content-header clearfix">
        <h1 class="pull-left">
            @localizer["Warehouse"] @localizer["Type"]
            <small>@localizer["Edit"]</small>
        </h1>

        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @localizer["Edit"]
            </button>
            <a href="/@localizer.CurrentLanguage/warehouse/warehouseTypelist" class="btn bg-red">
                <i class="fa fa-ban"></i>
                @localizer["Cancel"]
            </a>
        </div>
    </section>

    <section class="content">
        <div class="row">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">@localizer["Edit"] @localizer["Warehouse"] @localizer["Type"]</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    @localizer["General"] @localizer["Information"]
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label for="warehouseName">@localizer["Name"]</label>
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                        <br />
                                    </div>
                                    <div class="form-group">
                                        <label>Logo Warehouse Id ?</label>
                                        @Html.TextBoxFor(model => model.LogoWarehouseId, new { @class = "form-control", placeholder = "Logo WarehouseId" })
                                        <br />
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
