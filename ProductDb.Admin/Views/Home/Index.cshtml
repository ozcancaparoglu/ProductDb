@inject CustomLocalizer localizer
<section class="content">
    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>@Model.CategoryCount</h3>

                    <p>@localizer["Categories"]</p>
                </div>
                <div class="icon">
                    <i class="ion ion-bag"></i>
                </div>
                <a href="/@localizer.CurrentLanguage/category/list" class="small-box-footer">@localizer["MoreInfo"] <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>@Model.AttributesCount</h3>

                    <p>@localizer["Attributes"]</p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>
                <a href="/@localizer.CurrentLanguage/attributes/list" class="small-box-footer">@localizer["MoreInfo"] <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>@Model.ProductCount</h3>

                    <p>@localizer["Products"]</p>
                </div>
                <div class="icon">
                    <i class="ion ion-pricetags"></i>
                </div>
                <a href="/@localizer.CurrentLanguage/products/list" class="small-box-footer">@localizer["MoreInfo"] <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-red">
                <div class="inner">
                    <h3>@Model.UserCount</h3>

                    <p>@localizer["Users"]</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>
                <a href="/@localizer.CurrentLanguage/user/list" class="small-box-footer">@localizer["MoreInfo"] <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div clas="col-lg-6" style="text-align:left;background-color:#fff;">
                <img style="-webkit-user-select: none;margin: auto; width: 49%;" src="~/Uploads/Gif/box.gif">
                <img style="-webkit-user-select: none;margin: auto; width: 49%" src="~/Uploads/Gif/animatedDB.gif" />

                <img style="-webkit-user-select: none;margin: auto; width: 49%;" src="~/Uploads/Gif/integration.gif">
                <img style="-webkit-user-select: none;margin: auto; width: 49%;" src="https://www.biggloyalty.com/wp-content/uploads/2018/12/harita-TR.gif">
            </div>
        </div>
    </div>
</section>