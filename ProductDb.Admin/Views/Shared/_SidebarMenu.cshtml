@using ProductDb.Admin.Helpers.LocalizationHelpers
@using System.Security.Claims
@inject CustomLocalizer localizer
@{
    string CheckActive(string controller_name, string action_name)
    {
        return (ViewContext.RouteData.Values["Action"].ToString() == action_name && ViewContext.RouteData.Values["Controller"].ToString() == controller_name) ? "active" : "";
    }

    string CheckActiveForController(string controller_name)
    {
        return (ViewContext.RouteData.Values["Controller"].ToString() == controller_name) ? "active" : "";
    }

    var culture = localizer.CurrentLanguage;
}

