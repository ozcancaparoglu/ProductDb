                                <i class="fa fa-money"></i> <span>@localizer["Pms"]</span>
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="~/pms/order/order-list"><i class="fa fa-pie-chart"></i> <span>@localizer["Order"] @localizer["List"]</span></a></li>
