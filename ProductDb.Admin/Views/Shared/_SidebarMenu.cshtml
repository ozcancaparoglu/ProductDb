                                <i class="fa fa-globe"></i> <span>@localizer["Products"]</span>
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="@CheckActive("Product","AllList")"><a href="~/@culture/products/alllist"><i class="fa fa-list"></i> @localizer["AllProducts"]</a></li>
                                <li class="@CheckActive("ParentProduct","List")"><a href="~/@culture/parent-products/list/0"><i class="fa fa-industry"></i> @localizer["ParentProducts"]</a></li>
