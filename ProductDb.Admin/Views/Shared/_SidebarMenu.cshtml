                        </li>

                        <li class="dropdown @CheckActiveForController("Attributes") @CheckActiveForController("Language") @CheckActiveForController("Currency") @CheckActiveForController("User") @CheckActiveForController("Permission") @CheckActiveForController("User")">
                            <a class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-institution"></i> <span>@localizer["AdminMenu"]</span>
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="@CheckActive("Attributes","List")"><a href="~/@culture/attributes/list"><i class="fa fa-map"></i> <span>@localizer["Attributes"]</span></a></li>
