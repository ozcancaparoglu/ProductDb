                            </ul>
                        </li>

                        <li class="dropdown @CheckActiveForController("Warehouse")">
                            <a class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-archive"></i> <span>@localizer["Warehouses"]</span>
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="@CheckActive("Warehouse","WarehouseTypeList")"><a href="~/@culture/warehouse/WarehouseTypeList"><i class="fa fa-map-pin"></i> <span>@localizer["WarehouseTypes"]</span></a></li>
