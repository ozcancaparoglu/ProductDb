@inject CustomLocalizer localizer
@model AttributesValueViewModel
@using (Html.BeginForm("ValuesCreate", "Attributes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.AttributesValue.Id)
    @Html.HiddenFor(model => model.AttributesValue.AttributesId)
    @Html.HiddenFor(model => model.AttributesValue.CreatedDate)
    @Html.HiddenFor(model => model.AttributesValue.State)
    @Html.HiddenFor(model => model.AttributesValue.ProcessedBy)
    @Html.HiddenFor(model => model.AttributesValue.AttributesId)

    <!-- Content Header (Page header) -->
    <section class="content-header clearfix">
        <h1 class="pull-left">
            @localizer["Attributes"] @localizer["Values"]
            <small>@localizer["Edit"]</small>
        </h1>

        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @localizer["Edit"]
            </button>
            <a href="/@localizer.CurrentLanguage/attributes/values-list/@Model.AttributesValue.AttributesId" class="btn bg-red">
                <i class="fa fa-ban"></i>
                @localizer["Cancel"]
            </a>
        </div>
    </section>

    <section class="content">
        <div class="row">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">@localizer["Edit"] @localizer["Attribute"] @localizer["Value"]</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    @localizer["GeneralInformation"]
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label>@localizer["Value"]</label>
                                        @Html.TextBoxFor(model => model.AttributesValue.Value, new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label>@localizer["Unit"]</label>
                                        @Html.TextBoxFor(model => model.AttributesValue.Unit, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            @await Component.InvokeAsync("Language", new { fieldNames = ViewBag.FieldNames, tableName = ViewBag.tableName, id = Model.AttributesValue.Id })
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
}

<!-- Page script -->
<script>
    $(function () {
        $('.select2').select2();
        var tabsli = $('.nav-tabs li').first();
        tabsli.addClass("active");
        $('#tab_0').addClass("active");
    });
</script>