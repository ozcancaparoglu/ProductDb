@inject CustomLocalizer localizer
@model List<AttributesValueModel>
<!-- Content Header (Page header) -->
<section class="content-header clearfix">
    <h1 class="pull-left">
        @localizer["Attributes"] @localizer["Values"] | @ViewBag.AttributeName
        <small>@localizer["List"]</small>
    </h1>

    <div class="pull-right">
        <a href="/@localizer.CurrentLanguage/attributes/values-create/@ViewBag.AttributeId" class="btn bg-blue">
            <i class="fa fa-plus"></i>
            @localizer["AddNew"]
        </a>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="box box-primary">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                @localizer["Attributes"] @localizer["Values"]
                            </div>
                            <div class="panel-body">
                                <table id="attributesValueList" class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>@localizer["Values"]</th>
                                            <th>@localizer["Edit"]</th>
                                            <th>@localizer["Status"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var attributesValue in Model)
                                        {
                                            <tr>
                                                <td>@attributesValue.Value</td>
                                                <td>
                                                    <a href="/@localizer.CurrentLanguage/attributes/values-edit/@attributesValue.Id" class="btn btn-default">
                                                        <i class="fa fa-edit"></i> Edit
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="/@localizer.CurrentLanguage/attributes/set-state-values/@attributesValue.Id">
                                                        @if (attributesValue.State == (int)State.Active)
                                                        {
                                                            <i class="fa fa-check fa-fw"></i> <span>@localizer["Active"]</span>
                                                        }
                                                        else
                                                        {
                                                            <i class="fa fa-close"></i> <span>@localizer["Passive"]</span>
                                                        }
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>@localizer["Values"]</th>
                                            <th>@localizer["Edit"]</th>
                                            <th>@localizer["Status"]</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(function () {
        $('#attributesValueList').DataTable({
            'paging': true,
            'lengthChange': true,
            'searching': true,
            'ordering': true,
            'info': true,
            'autoWidth': false,
            'pageLenght': 100
        });
    });
</script>

